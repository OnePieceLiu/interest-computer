/* pages/confirm/index.wxss */
.text-button{
  color: #1AAD16;
  display: inline-block;
}

/*----------还款单modal start-------------*/
.repay-modal-form{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 95%;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 4px;
  padding: 40rpx 60rpx;
}
.record-form-item {
  display: flex;
  justify-content: space-between;
  align-items: top;
  padding: 20rpx 0;
}
.record-form-item-title{
  flex: none;
}
.record-form-item-input{
  flex: auto;
  position: relative;
  text-align: right;
}
.form-input-before-unit{
  text-align: right;
  padding: 0 60rpx 0 20rpx;
}
.form-input-unit{
  position: absolute;
  top: 0;
  right: 10rpx;
}
.button-area{
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
/*----------还款单modal end-------------*/
